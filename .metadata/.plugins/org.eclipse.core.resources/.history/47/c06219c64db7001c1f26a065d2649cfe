#include <stdio.h>
#include <stdlib.h>

int Suma(int primerNumero,int segundoNumero);
int Resta(int primerNumero,int segundoNumero);
int Multiplicacion(int primerNumero,int segundoNumero);
float Division(int primerNumero,int segundoNumero);

int main(void)
{
	setbuf(stdout, NULL);
	float resultado;
	char operacion;
	int primerNumero;
	int segundoNumero;

	printf("Ingrese numero 1\n");
	scanf("%d",&primerNumero);
	printf("Ingrese que funcion desea usar\n");
	scanf("%c",&operacion);
	printf("Ingrese numero 2\n");
	scanf("%d",&segundoNumero);

	switch (operacion)
	{
	case "Suma":
		resultado=Suma(primerNumero+segundoNumero);
		break;
	case "Resta":
		Resta=Resta(primerNumero-segundoNumero;
		break;
	case "Multiplicacion":
		Multiplicacion=primerNumero*segundoNumero;
		break;
	case "Division":
		Division=primerNumero/segundoNumero;
		break;

	}















	resultado= (primerNumero,segundoNumero);
	printf("el resultado es de %f", resultado);
	return 0;
}

int Suma(int n1,int n2)
	{
	int resultado;
	resultado= n1+n2;
		return resultado;
	}
int Resta(int n1,int n2)
	{
	int resultado;
	resultado= n1+n2;
	return resultado;
	}
int Multiplicacion(int n1,int n2)
	{
	int resultado;
	resultado= n1*n2;
	return resultado;
	}
float Division(int n1,int n2)
	{
	float resultado;
	resultado= n1/n2;
	return resultado;
	}







