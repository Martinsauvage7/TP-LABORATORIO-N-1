#include <stdio.h>
#include <stdlib.h>

float Division(float resultado, int primerNumero,int segundoNumero);

int main(void)
{
	setbuf(stdout, NULL);
	float resultado;
	char operacion;
	int primerNumero;
	int segundoNumero;

	printf("Ingrese numero 1\n");
	fflush(stdin);
	scanf("%d",&primerNumero);
	printf("Ingrese que funcion desea usar\n");
	fflush(stdin);
	scanf("%c",&operacion);
	printf("Ingrese numero 2\n");
	fflush(stdin);
	scanf("%d",&segundoNumero);


		resultado=Division(primerNumero,segundoNumero);
		break;

printf("el resultado es de %f", resultado);

return 0;

}


float Division(int n1,int n2)
	{
	float resultado;
	resultado= (float)n1/n2;
	if(n2 !=0)
		{
			return resultado;;
		}
	else
		{
		printf("Error.");
		}
	return 0;
	}







