#include <stdio.h>
#include <stdlib.h>
int main(void) {
	setbuf(stdout,NULL);
	int numeros;
	float promedio;
	int contador=0;
	int acumulador=0;
	char respuesta='si';

	while(respuesta=='si')
	{
		printf("Ingrese un numero");
		scanf("%d", &numeros);
		printf("\n ¿Desea Continuar? si/no \n");
				scanf("%c",&respuesta);
				acumulador=acumulador+numeros;
				contador++;
	}
	promedio=(float)acumulador/contador;
	printf("el promedio de los numeros ingresados es de %f", promedio);
	return EXIT_SUCCESS;
}
